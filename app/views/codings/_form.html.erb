    <%= f.label :rom_id %><br />
    <%= f.text_field :rom_id %>
  </div>
  <div class="field">
    <%= f.label :client %><br />
    <%= f.select :client, [["Android", "ANDROID"], ["Iphone", "IPHONE"]] %>
  </div>
  <div class="field">
    <%= f.label :encode_mode %><br />
    <%= f.number_field :encode_mode %>
